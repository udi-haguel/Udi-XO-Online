<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LinearLayoutVertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>


    <style name="base_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/crayons_regular</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="green_text" parent="base_text">
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="turquoise_text" parent="base_text">
        <item name="android:textColor">@color/turquoise</item>
    </style>

    <style name="dialog_animation">
        <item name="android:windowEnterAnimation">@anim/fade_in_animation</item>
        <item name="android:windowExitAnimation">@anim/fade_out_animation</item>
    </style>

    <style name="auth_edit_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textColorHint">@color/auth_hint</item>
        <item name="android:backgroundTint">@color/turquoise</item>
        <item name="android:fontFamily">@font/crayons_regular</item>
        <item name="android:ems">10</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
    </style>

</resources>